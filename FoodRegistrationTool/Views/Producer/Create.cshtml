@model Producer

<div class="container">
    <h1 class="h1">Register new Producer</h1>
    <form asp-action="Create" enctype="multipart/form-data" class="form-inline">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label><span class="text-danger">*</span>
            <input asp-for="Name" class="form-control" style="width: fit-content;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label><span class="text-danger">*</span>
            <input asp-for="Address" class="form-control" style="width: fit-content;" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <p>
            <a asp-action="Table" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Register</button>
        </p>
    </form>
</div>
