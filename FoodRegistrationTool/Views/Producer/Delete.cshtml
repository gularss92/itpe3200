@model Producer

<div class="container">
    <h1 class="h1">Delete Producer</h1>
    <div class="alert alert-danger" role="alert">
        <strong>Warning! </strong> This will also delete all products registered to @Model.Name!
    </div>

    <div>
        <dl class="row">
            <dt class="col-sm-2">Producer Id:</dt>
            <dd class="col-sm-10">@Model.ProducerId</dd>

            <dt class="col-sm-2">Name:</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Address:</dt>
            <dd class="col-sm-10">@Model.Address</dd>
        </dl>
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProducerId" method="post">
            <p>
                <a asp-action="Table" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
            </p>
        </form>
    </div>
</div>
