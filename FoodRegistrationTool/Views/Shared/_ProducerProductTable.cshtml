@model IEnumerable<Product>

<table class="table table-striped table-hover custom-table" style="max-width: 1200px;">
    <caption><strong>Products</strong></caption>
    <thead>
        <tr class="table-header">
            <th>Image</th>
            <th>Product</th>
            <th>Category</th>
            <th>NutriScore</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">
                        <img src="@product.ImageUrl" class="product-thumbnail" alt="@product.Name" /></a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Product" asp-action="Details"
                        asp-route-id="@product.ProductId">@product.Name</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Product" asp-action="Details"
                        asp-route-id="@product.ProductId">@product.Category</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"><span
                            class="nutrition-score" data-score="@product.NutriScore">@product.NutriScore</span></a>
                </td>
            </tr>
        }
    </tbody>
</table>