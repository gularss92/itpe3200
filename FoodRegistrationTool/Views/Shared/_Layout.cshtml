<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodRegistrationTool</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/FoodRegistrationTool.styles.css" asp-append-version="true" />
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/table-nutrition.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/js/jquery.validate.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.js"></script>

</head>

<body class="m-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand">Food Registry</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Producer"
                                asp-action="Table">Producers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product"
                                asp-action="Table">Products</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial"></partial>
                </div>
            </div>
        </nav>
    </header>
    <div class="main-container container-fluid p-0 mb-0">
        <main role="main">
            @RenderBody()

        </main>
    </div>

    <footer class="text-center footer-custom">
        <div class="container justify-content-center p-4">
            <div class="row">
                <div class="col-sm-4 mb-4 mb-md-0">
                    <p class="text-uppercase"><strong>Food Registry</strong></p>
                </div>

                <div class="col-sm-4 mb-4 mb-md-0">
                    <p class="text-uppercase"><strong>Contact</strong></p>
                    <p>Phone: +123 456 7890</p>
                    <p>Email: info@foodregistry.com</p>
                </div>

                <div class="col-sm-4 mb-4 mb-md-0">
                    <p class="text-uppercase"><strong>Address</strong></p>
                    <p>1234 Food Street</p>
                    <p>Oslo, Norway</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
