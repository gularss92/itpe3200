    <div class="container justify-content-center">
        <div class="row justify-content-center">
            <!-- Feature 1 -->
            <div class="col-sm-4 mb-3 text-center feature-card">
                <div>
                    <p class="mb-0"><i class="icon bi bi-person-plus-fill"></i></p>
                </div>
                <div>
                    <p class="mb-0"><strong>Create your account</strong></p>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-sm-4 mb-3 text-center feature-card">
                <div>
                    <p class="mb-0"><i class="icon bi bi-list-ul"></i></p>
